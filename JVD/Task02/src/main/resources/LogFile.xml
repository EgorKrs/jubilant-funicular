<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <File name="simpleLogs" fileName="src\main\resources\Logs.txt" immediateFlush="false" append="false">
            <PatternLayout
                    pattern="%d[%t]%-5level %logger{36} - %msg%n%throwable"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console" />
            <AppenderRef ref="MyFile"/>
        </Root>
    </Loggers>
</Configuration>